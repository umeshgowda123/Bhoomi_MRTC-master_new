<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:id="@+id/card_view"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    card_view:cardUseCompatPadding="true">

    <ScrollView xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        tools:showIn="@layout/activity_bhoomi">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/banner_content1_background_color"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal|center_vertical"
                    android:layout_margin="8dp"
                    android:text="@string/content_banner_header_text"
                    android:textAlignment="center"
                    android:textColor="@android:color/white"
                    android:textSize="24sp" />


                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal|center_vertical"
                    android:layout_margin="8dp"
                    android:text="@string/content_banner_text1"
                    android:textAlignment="center"
                    android:textColor="@color/banner_content_text1_color"
                    android:textSize="16sp" />

                <!-- this is not requiered
                <TextView
                    android:layout_width="wrap_content"
                    android:textAlignment="center"
                    android:layout_height="wrap_content"
                    android:layout_margin="16sp"
                    android:text="@string/content_banner_text2"
                    android:textColor="@color/banner_content_text2_color"
                    android:layout_gravity="center_horizontal|center_vertical"
                    android:textSize="20sp"
                    />
                    -->

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/banner_content2_background_color"
                android:orientation="vertical">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:src="@drawable/govtofkarnataka"
                    android:contentDescription="@string/todo" />
                <!--
                remove data to fit into screen
                <TextView
                    android:layout_width="wrap_content"
                    android:textAlignment="center"
                    android:layout_height="wrap_content"
                    android:layout_margin="16dp"
                    android:text="@string/content_banner_image_text1"
                    android:textColor="@color/banner_content_header_text_color"
                    android:layout_gravity="center_horizontal|center_vertical"
                    android:textSize="16sp"
                    />
                <TextView
                    android:layout_width="wrap_content"
                    android:textAlignment="center"
                    android:layout_height="wrap_content"
                    android:layout_margin="16dp"
                    android:text="@string/content_banner_image_text2"
                    android:textColor="@color/banner_content_header_text_color"
                    android:layout_gravity="center_horizontal|center_vertical"
                    android:textSize="16sp"
                    />
                    -->
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/banner_content3_background_color"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal|center_vertical"
                    android:layout_margin="16dp"
                    android:text="@string/content3_banner_header_text"
                    android:textAlignment="center"
                    android:textSize="24sp" />


                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal|center_vertical"
                    android:layout_margin="8dp"
                    android:text="@string/content3_banner_header_text1"
                    android:textAlignment="center"
                    android:textSize="20sp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal|center_vertical"
                    android:layout_margin="16sp"
                    android:text="@string/content3_banner_text2"
                    android:textAlignment="center"
                    android:textColor="@color/banner_content3_text3_color"
                    android:textSize="16sp" />

            </LinearLayout>

        </LinearLayout>
    </ScrollView>
</android.support.v7.widget.CardView>