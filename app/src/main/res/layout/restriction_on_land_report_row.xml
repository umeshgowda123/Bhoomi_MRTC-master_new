<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <androidx.cardview.widget.CardView
        xmlns:card_view="http://schemas.android.com/apk/res-auto"
        android:id="@+id/card_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        card_view:cardCornerRadius="10dp"
        card_view:cardElevation="5dp"
        card_view:cardUseCompatPadding="true">

    <TableLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TableRow
            android:background="@android:color/white"
            android:padding="2dp">
            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="@string/owner_name"
                android:layout_weight="1"
                android:layout_margin="2dp"
                android:textStyle="bold"
                android:textColor="@android:color/black" />
            <TextView
                android:id="@+id/tvOwnerName"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:maxLines="1"
                android:layout_margin="2dp"
                android:gravity="center"
                android:layout_weight="1"
                android:textColor="@android:color/black" />
        </TableRow>

        <TableRow
            android:background="@android:color/white"
            android:padding="2dp">
            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="@string/extent"
                android:layout_weight="1"
                android:layout_margin="2dp"
                android:textStyle="bold"
                android:textColor="@android:color/black" />
            <TextView
                android:id="@+id/tvExtent"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:maxLines="1"
                android:layout_margin="2dp"
                android:gravity="center"
                android:layout_weight="1"
                android:textColor="@android:color/black" />
        </TableRow>

        <TableRow
            android:background="@android:color/white"
            android:padding="2dp">
            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="@string/is_he_main_owner"
                android:layout_weight="1"
                android:layout_margin="2dp"
                android:textStyle="bold"
                android:textColor="@android:color/black" />
            <TextView
                android:id="@+id/tvMainOwner"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:maxLines="1"
                android:layout_margin="2dp"
                android:gravity="center"
                android:layout_weight="1"
                android:textColor="@android:color/black" />
        </TableRow>

        <TableRow
            android:background="@android:color/white"
            android:padding="2dp">
            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="@string/land_type"
                android:layout_weight="1"
                android:layout_margin="2dp"
                android:textStyle="bold"
                android:textColor="@android:color/black" />
            <TextView
                android:id="@+id/tvLandType"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:maxLines="1"
                android:layout_margin="2dp"
                android:gravity="center"
                android:layout_weight="1"
                android:textColor="@android:color/black" />
        </TableRow>
        <TableRow
            android:background="@android:color/white"
            android:padding="2dp">
            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="@string/is_land_govt_restricted"
                android:layout_weight="1"
                android:layout_margin="2dp"
                android:textStyle="bold"
                android:textColor="@android:color/black" />
            <TextView
                android:id="@+id/tvlandGovtRestricted"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:maxLines="1"
                android:layout_margin="2dp"
                android:gravity="center"
                android:layout_weight="1"
                android:textColor="@android:color/black" />
        </TableRow>
        <TableRow
            android:background="@android:color/white"
            android:padding="2dp">
            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="@string/is_there_a_court_stay"
                android:layout_weight="1"
                android:layout_margin="2dp"
                android:textStyle="bold"
                android:textColor="@android:color/black" />
            <TextView
                android:id="@+id/tvCourtStay"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:maxLines="1"
                android:layout_margin="2dp"
                android:gravity="center"
                android:layout_weight="1"
                android:textColor="@android:color/black" />
        </TableRow>
        <TableRow
            android:background="@android:color/white"
            android:padding="2dp">
            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="@string/is_land_alienated"
                android:layout_weight="1"
                android:layout_margin="2dp"
                android:textStyle="bold"
                android:textColor="@android:color/black" />
            <TextView
                android:id="@+id/tvLandAlienated"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:maxLines="1"
                android:layout_margin="2dp"
                android:gravity="center"
                android:layout_weight="1"
                android:textColor="@android:color/black" />
        </TableRow>
        <TableRow
            android:background="@android:color/white"
            android:padding="2dp">
            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="@string/any_trnsc_running"
                android:layout_weight="1"
                android:layout_margin="2dp"
                android:textStyle="bold"
                android:textColor="@android:color/black" />
            <TextView
                android:id="@+id/tvTrnscRunning"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:maxLines="1"
                android:layout_margin="2dp"
                android:gravity="center"
                android:layout_weight="1"
                android:textColor="@android:color/black" />
        </TableRow>
    </TableLayout>
    </androidx.cardview.widget.CardView>

</LinearLayout>