<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">

    <item android:drawable="@android:drawable/dialog_holo_light_frame"
        android:left="0dp" android:right="0dp"
        android:top="0dp" android:bottom="0dp">
        <shape android:shape="rectangle">
            <gradient
                android:endColor="#7117e5"
                android:startColor="#3c62f0"
                android:angle="270"
                />
            <solid android:color="@android:color/white"/>
            <corners android:radius="5dp"/>
        </shape>

    </item>

    <item
        android:left="0dp" android:top="0dp"
        android:bottom="0dp" android:right="0dp">
        <!--whatever you want in the background, here i preferred solid white -->
        <shape android:shape="rectangle">
            <gradient
                android:endColor="#7117e5"
                android:startColor="#3c62f0"
                android:angle="270"
                />
            <solid android:color="@android:color/white"/>
            <corners android:radius="5dp"/>
        </shape>
    </item>

</layer-list>